  width:570rpx;
  height:279rpx;
  border-radius:10rpx;
  background:#fff;
  position:absolute;
  top:50%;
  left:50%;
  margin-top:-112rpx;
  margin-left:-285rpx;
  z-index:99;
}
.onmatch-text{
  width:80%;
  height:138rpx;
  line-height:48rpx;
  text-align:center;
  font-size:32rpx;
