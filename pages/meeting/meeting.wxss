.content {
  width: 100%;
  position: absolute;
}

.content .footer {
  width:100%;
  font-size:24rpx;
  justify-content: space-between;
  height:64px;
  position:fixed;
  bottom:0;
}

.content .footer .toolbar {
  width:100%;
  height:64px;
  display:flex;
  justify-content:center;
  align-items:center;
}

.content .footer .mic {
  height: 100%;
  width: 44px;
