.content .footer .muted {
  opacity: 0.5;
}

.content .footer .log {
  height: 100%;
  width: 44px;
  background-size: 75% 50%;
  border: 0;
  background-position: center;
  background-repeat: no-repeat;
  background-image: url();
}



.content .footer .makeup{
  height: 100%;
  width: 44px;
  background-size: 75% 50%;
  border: 0;
  background-position: center;
  background-repeat: no-repeat;
  background-image:url();
}

.content .makeup.off{
