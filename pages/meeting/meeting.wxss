/* 礼物列表 */
.mask-gift{
  position: absolute;
  width: 100%;
  height: 100vh;
  z-index: 998;
  bottom: 0px;
  top: 0rpx;
  background: rgba(0, 0, 0, 0);
}
.collapsegift{
    width: 100%;
    height: 100%;
    bottom: 550rpx;
}
.gift-box{
  position: absolute;
  width: 100%;
  height: 550rpx;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  bottom: 0rpx;
  visibility:block;
}
.gitf-ul{
  width: 100%;
  height: 475rpx;
  white-space: nowrap; 
  display: flex;
  
}
.gitf-page{
    width: 100%;
    height: 475rpx;
    overflow: hidden;
    display: inline-block;
}
.gitf-ul-bot{
    width: 100%;
    height: 61rpx;
    display: flex;
}
.give-money{
    height: 58rpx;
    border-radius: 30rpx;
    border: 1rpx solid #E4C68B;
    float: left;
    margin-left: 24rpx;
    font-size: 30rpx;
    text-align: center;
    padding: 0rpx 20rpx;
    line-height: 58rpx;
    color: #E4C68B
}
.give-away{
    width: 130rpx;
    height: 60rpx;
    border-radius: 30rpx;
    background: #E4C68B;
    color: #fff;
    position: absolute;
    line-height: 60rpx;
    font-size: 30rpx;
    text-align: center;
    right: 24rpx;
}
.gitf-bag{
    width: 122rpx;
    height: 122rpx;
    margin: 32rpx 30rpx 0 30rpx;
}
.gitf-bag > image{
    width: 100%;
    height: 100%;
    display: block
}
.showvip{
    width: 54rpx;
    height: 30rpx;
    position: absolute;
    background: #ccc;
    top: 10rpx;
    left: 10rpx;
}
.showvip > image{
    width: 100%;
    height: 100%;
    display: block
}
.select{
    height: 228rpx;
    float:left;
    flex:0 0 25%;
    position:relative;
    color: #fff;
    text-align: center;
    box-sizing: border-box;
    border: 1rpx solid #B9A672; 
    font-size: 22rpx;
}
.cancel{
    height: 228rpx;
    float:left;
    flex:0 0 25%;
    position:relative;
    color: #fff;
    text-align: center;
    box-sizing: border-box;
    border: 0;
    font-size: 22rpx;
}
/* 礼物动画层 */
.animat_center_show{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    z-index: 9999;
    top: 30%;
    left: 50%;
    margin-top: -100rpx;
    margin-left: -100rpx;
    display: block;
}
.animat_center_hide{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    z-index: 9999;
    top: 30%;
    left: 50%;
    margin-top: -100rpx;
    margin-left: -100rpx;
    display: none;
}
.animat_center_show > image{
    width: 100%;
    height: 100%;
    display: block;
}
.animat_center_hide > image{
    width: 100%;
    height: 100%;
    display: block;
}