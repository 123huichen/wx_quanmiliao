/* pages/details/details.wxss */
.det_avatar{
    width: 100%;
    height: 750rpx;
}
.det_avatar > image{
    width: 100%;
    height: 100%;
}
.avatar_name{
    font-size: 34rpx;
    height:65px;
    line-height:85px;
    position: absolute;
    top: 0rpx;
    color: #fff;
    z-index: 99;
    width: 100%;
    text-align: center
}
.avatar_data{
    width: 100%;
    height: 102rpx;
    display: flex;
    position: absolute;
    z-index: 999;
    top: 648rpx;
    background-image: -webkit-linear-gradient(top,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.4) 100%);
    background-image: -moz-linear-gradient(top,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.4) 100%);
    background-image: -o-linear-gradient(top,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.4) 100%);
    background-image: linear-gradient(top,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.4) 100%);
    color: #fff;
}
.avatar_flex{
    flex: 1;
    color: fff;
    text-align: center
}
.avatar_maintitle{
    font-size: 36rpx;
    line-height: 75rpx;
}
.avatar_subtitle{
    font-size: 22rpx;
    line-height: 0rpx;
}
.det_name_box{
    width: 100%;
    height: 102rpx;
    border-bottom: 20rpx solid #EEEEEE;
}
.float{
    float: left
}
.det_name{
    font-size: 34rpx;
    margin: 30rpx 0 0 23rpx;
    color: #333333;
    height: 70rpx;
    font-family: PingFang-SC-Medium;
}
.det_name_girl{
    width: 60rpx;
    height: 30rpx;
    background: #FF83CE;
    border-radius: 5rpx;
    margin: 10rpx 0 0 10rpx;
}
.det_name_girl image{
    width: 17rpx;
    height: 20rpx;
    display: block;
    margin: 5rpx 5rpx;
}
.det_name_girl text{
    font-size: 22rpx;
    color: #ffffff;
    line-height: 5rpx;
    margin-left: 28rpx;
    margin-top: -15rpx;
}
.det_name_crown{
    width: 36rpx;
    height: 30rpx;
    margin: 10rpx 0 0 10rpx;
}
.det_name_crown image{
    width: 100%;
    height: 100%;
    display: block;
}
.det_price{
    float: right;
    font-size: 30prx;
    color: #EC82F5;
    margin-right: 24rpx
}
.det_nameId{
    font-size: 28rpx;
    margin: 0 0 0 23rpx;
    line-height: 0rpx;
    color: #999999;
    font-family: PingFang-SC-Regular;
}

.det_dynamic{
    padding: 29rpx 22rpx;
}
.det_dy_title{
    font-size: 30rpx;
    color: #333333;
    font-weight:bold
}
.det_dy_right{
    font-size: 24rpx;
    color: #999999;
    float:right;
}
.det_dynamic_img{
    height: 160rpx;
    padding: 25rpx 0 0 0;
    white-space: nowrap; 
    display: flex
}
.det_dynamic_img0{
    width: 160rpx;
    height: 160rpx;
    background: #999999;
    border-radius: 10rpx;
    overflow: hidden;
    display: inline-block;
    margin-right: 10rpx;
}
.det_dynamic_img0 image{
    width: 100%;
    height: 100%;
}
.det_dy_vice{
    font-size: 28rpx;
    color: #333333;
    margin-top: 25rpx;
}
.det_personal{
    border-top:1rpx solid #EEEEEE;
    padding: 30rpx 22rpx;
}
.det_gitf{
    border-top:1rpx solid #EEEEEE;
    padding: 30rpx 22rpx;
    margin-bottom: 110rpx;
}
.det_dy_box{
    margin-top: 30rpx;
}
.det_dy_lists{
    width: 100rpx;
    height: 186rpx;
    margin-right: 19rpx;
    float: left;
}
.det_dy_lists image{
    width: 100rpx;
    height: 100rpx;
}
.det_dy_lists > view{
    font-size: 22rpx;
    color: #333333;
    text-align: center;
}
.clear{
    clear: both;
    margin-bottom: 110rpx;
}
.det_bottom{
    width: 100%;
    height: 110rpx;
    position: fixed;
    bottom: 0rpx;
    z-index: 999;
    display: flex;
    color: #EC82F5;
    font-size: 22rpx;
    text-align: center;
    line-height: 110rpx
}
.det_bottom_letter{
    flex: 1;
    background: #fff
}
.det_bottom_video{
    flex: 2;
    color: #fff;
    font-size: 30rpx;
    background: #EC82F5;
    display:flex;
    align-items: center;
    justify-content: center;
}
.det_botvid_img{
    width: 52rpx;
    height: 38rpx;
}
.det_botvid_img > image{
    width: 100%;
    height: 100%;
    display: block
}
.det_botvid_text{
    margin-left: 10rpx;
}
.det_bottom_icon{
    width: 44rpx;
    height: 44rpx;
    margin: 23rpx auto 0;
}
.det_bottom_icon image{
    width: 100%;
    height: 100%;
    display:block;
}
.det_bottom_text{
    line-height: 28rpx;
}