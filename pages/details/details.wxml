<view class=''>
    <block wx:for-items="{{list}}">
        <view class='det_avatar'>
            <image mode='aspectFill' src='{{item.avatar}}'></image>
            <view class='avatar_name'>{{item.nickname}}</view>
            <view bindtap="ComeBack" class='come_back'> 
                <image src='../../images/icon_back_white.png'></image>
            </view>
            <view class='avatar_data'>
                <view class='avatar_flex'>
                    <view class='avatar_maintitle'>{{item.city}}</view>
                    <view class='avatar_subtitle'>所在地</view>
                </view>
                <view class='avatar_flex'>
                    <view class='avatar_maintitle'>{{item.attention_num}}</view>
                    <view class='avatar_subtitle'>粉丝</view>
                </view>
                <view class='avatar_flex'>
                    <view class='avatar_maintitle'>{{item.connect_ratio}}%</view>
                    <view class='avatar_subtitle'>接通率</view>
                </view>
            </view>
        </view>
        <view class='det_name_box'>
            <view class='det_name'>
                <view class='float'>{{item.nickname}}</view>
                <view class='det_name_girl float'>
                    <image src='../../images/icon_girl.png'></image>
                    <text class='float'>{{item.age}}</text>
                </view>
                <view class='det_name_crown float'>
                    <image src='../../images/crown.png'></image>
                </view>
                <text class='det_price'>{{item.wx_info.wx_price}}金币/分钟</text>
            </view>
            <view class='det_nameId'>{{item.wx_info.wx_price}}</view> 
        </view>
        <view class='det_dynamic'>
            <text class='det_dy_title'>动态</text>
            <text class='det_dy_right' bindtap="showDialogBtn">查看全部</text>
            <scroll-view scroll-x="true" class='det_dynamic_img'>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
                 <view class='det_dynamic_img0'>
                      <image mode='aspectFill' src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1525780831662&di=c2cc80870675c95b566a07f607ce8390&imgtype=0&src=http%3A%2F%2Fpic10.photophoto.cn%2F20090224%2F0036036802407491_b.jpg'></image>
                 </view>
            </scroll-view>
        </view>
        <view class='det_personal'>
             <view class='det_dy_title'>个人信息</view>
             <view class='det_dy_vice'>标签：</view>
             <view class='det_dy_vice'>个性签名：{{item.signature}}</view>
        </view>
        <view class='det_gitf'>
            <view class='det_dy_title'>收到的礼物</view>
