                    <view>玫瑰</view>
                    <view>×268</view>
                </view>
            </view>
        </view>
        <view class='clear'></view>
        <!-- 遮罩层 -->
        <view class='pop-ups-bg' wx:if="{{showModal}}">
            <!-- 弹窗 -->
            <view class='pop-ups'>
                <view class='modal-title'>APP内方可查看详情</view>
                <view class='modal-title-vice'>下载APP</view>
                <view class='modal-footer'>
                    <view class='btn-cancel' bindtap='onCancel' data-status='cancel'>取消</view>
                    <view class='btn-confirm' bindtap='onConfirm' data-status='confirm'>确定</view>
                </view>
            </view>
        </view>   
        <!-- 弹窗结束 --> 
        <view class='det_bottom'>
            <view class='det_bottom_letter' capture-bind:touchstart='chatWindow' id='{{item.id}}' data-name='{{item.nickname}}'>
                <view class='det_bottom_icon'>
                    <image src='../../images/icon_chat.png'></image>
                </view>
                <view class='det_bottom_text'>私信</view>
            </view>
            <view class='det_bottom_letter'>
                <view class='det_bottom_icon'>
                    <image src='../../images/gift.png'></image>
                </view>
                <view class='det_bottom_text'>礼物</view>
            </view>
            <view class='det_bottom_video' bindtap="videoChat">
                <view class='det_botvid_img'><image src='../../images/icon_video.png'></image></view>
                <view class='det_botvid_text'>和她视频</view>
            </view>
        </view>
    </block>    
</view>
