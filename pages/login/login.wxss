/* pages/login/login.wxss */
.login-bg{
    width: 100%;
    height: 100vh;
    background: #9B30FF;
}
.getUserInfo_but{
    width: 50%;
}
/* 自定义授权弹窗 */
.mask{
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    z-index: 100
}
.model{
    width: 70%;
    height: 300rpx;
    font-size: 32rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -35%;
    margin-top: -150rpx;
    background: #fff;
    border: 1rpx solid #DFDFDF;
    border-radius: 15rpx;
    z-index: 999;
    text-align: center;
}
.modelTitle{
    line-height: 100rpx;
}
.modelBody{
    margin-bottom: 40rpx;
}
.btns{
    width: 80%;
    margin: auto;
    color: #333333
}
.agree{
    background: #EC82F5; 
    font-size: 36rpx;
}