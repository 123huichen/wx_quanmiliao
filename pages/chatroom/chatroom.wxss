/* 礼物动画层 */
.animat_center_show{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    z-index: 9999;
    top: 30%;
    left: 50%;
    margin-top: -100rpx;
    margin-left: -100rpx;
    display: block;
}
.animat_center_hide{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    z-index: 9999;
    top: 30%;
    left: 50%;
    margin-top: -100rpx;
    margin-left: -100rpx;
    display: none;
}
.animat_center_show > image{
    width: 100%;
    height: 100%;
    display: block;
}
.animat_center_hide > image{
    width: 100%;
    height: 100%;
    display: block;
}