.message {
    height:auto;
    padding:10px 15px;
}
.time{
    margin:7px 0;
    text-align:center;
}
.time > text{
    display:inline-block;
    padding:3px 10px 0 10px;
    font-size:12px;
    color:#fff;
    line-height:14px;
    border-radius:2px;
    background-color:#dcdcdc;
}
.self{
    text-align:right;
}
.avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin:0 10px 0 0;
    float:left;
}
.self .avatar{
    float:right;
    margin:0 0 0 10px;
}
.self .msg {
    background-color:#EFEFEF;
}
.msg {
    display:flex;
    justify-content:center;
    display:inline-block;
    position:relative;
    padding:10px 10px;
    max-width:calc(85% - 40px);
    min-height:(12 + 5 * 2) px;
    font-size:28rpx;
    overflow:hidden;
    text-align:left;
    word-break:break-all;
    background: #E2BD77;
    border-radius: 15rpx;
}



