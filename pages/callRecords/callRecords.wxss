/* pages/callRecords/callRecords.wxss */
.cha-bg{
  background:#F6F6F6;
  width:100%;
  height:100vh;
  overflow:hidden;
}
.title_news{
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
  font-size:34rpx;
  background:#FECA77;
  border-bottom:1rpx solid #DFDFDF;
  height:65px;
  line-height:85px;
  color:#333333;
}
.title_cha{
position:fixed;
display:flex;
flex-direction:column;
align-items:center;
justify-content:space-between;
font-size:34rpx;
color:#333333;
width:100%;
height:128rpx;
line-height:148rpx;
top:0rpx;
left:0rpx;
z-index:999;
}
.come_back{
position:absolute;
top:0rpx;
line-height:85px;
width:50rpx;
height:85px;
left:25rpx;
z-index:999;
}
.callrecords{
  position: absolute;
  top: 66px;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  overflow: hidden;
}
.callrecords-box{
  width: 674rpx;
  height: 226rpx;
  background: #fff;
  margin-top: 20rpx;
  margin-left: 38rpx;
}
.avat-top{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 33rpx;
}
.avat-top-left{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  overflow: hidden;
  background: #ccc;
  margin-left: 25rpx;
}
.avatar > image{
  width: 100%;
  height: 100%;
  display: block;
}
.name-old{
  margin-left: 15rpx;
}
.name{
  color: #333333;
  font-size: 26rpx;
}
.old{
  color: #333333;
  font-size: 20rpx;
}
.avat-top-right{
  padding-right: 15rpx;
}
.time{
  font-size: 20rpx;
  color: #999999;
  text-align: right
}
.onceAgain{
  width: 110rpx;
  height: 38rpx;
  background: #FECA77;
  line-height: 38rpx;
  color: #333333;
  text-align: center;
  font-size: 22rpx;
  border-radius: 4rpx;
  margin-top: 5rpx;
}
.time-long-bott{
  width:100%;
  height:80rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding-top:33rpx;
}
.time-long{
  font-size: 24rpx;
  width: 50%;
  text-align: center;
}
.time-long-top{
  color: #CDAB6B;
}
.time-long-bot{
  color: #333333;
}
.age{
  padding-top:5rpx; 
}